@model PREGUNTA_01_EINER_CHAVEZ.Models.Videoteca

@{
    ViewData["Title"] = "Edit";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> Editar Videoteca
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label">
                                <i class="fas fa-font"></i> Nombre
                            </label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Tipo" class="control-label">
                                <i class="fas fa-tags"></i> Tipo
                            </label>
                            <input asp-for="Tipo" class="form-control" placeholder="Ingrese el tipo" />
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="VecesVista" class="control-label">
                                <i class="fas fa-eye"></i> Veces Vista
                            </label>
                            <input asp-for="VecesVista" class="form-control" placeholder="Ingrese el número de veces vista" />
                            <span asp-validation-for="VecesVista" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Rating" class="control-label">
                                <i class="fas fa-star"></i> Rating
                            </label>
                            <input asp-for="Rating" class="form-control" placeholder="Ingrese el rating" />
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Fecha" class="control-label">
                                <i class="fas fa-calendar-alt"></i> Fecha
                            </label>
                            <input asp-for="Fecha" type="date" class="form-control" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center mt-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Guardar
                            </button>
                        </div>

                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
}
